// Please copy this file to 'neoconf.json' to enable it.
{
  "neodev": {
    "library": {
      "enabled": true,
      "plugins": ["nvim-lspconfig", "lsp"]
    }
  },
  "neoconf": {
    "plugins": {
      "lua_ls": {
        "enabled": true
      }
    }
  },
  "lspconfig": {
    "lua_ls": {
      "Lua.completion.callSnippet": "Replace",
      "Lua.workspace.checkThirdParty": false
    }
  },
  "linopts": {
    "diagnostics": {
      "signs": {
        "error": "",
        "warning": "",
        "info": "",
        "hint": "",
        "ok": ""
      }
    },
    "ui": {
      "blend": {
        "winblend": 15,
        "pumblend": 15
      },
      "floatwin": {
        "border": "rounded",
        "scale": 0.85
      },
      "sidebar": {
        "scale": 0.2,
        "min": 20,
        "max": 60
      }
    },
    "perf": {
      "maxfilesize": 5242880 // 5 * 1024 * 1024
    }
  }
}
