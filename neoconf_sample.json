// Please copy this file to 'neoconf.json' to enable it.
{
  "neodev": {
    "library": {
      "enabled": true,
      "plugins": ["nvim-lspconfig", "lsp"]
    }
  },
  "neoconf": {
    "plugins": {
      "lua_ls": {
        "enabled": true
      }
    }
  },
  "lspconfig": {
    "lua_ls": {
      "Lua.completion.callSnippet": "Replace",
      "Lua.workspace.checkThirdParty": false
    }
  },
  "linopts": {
    "diagnostics": {
      "signs": {
        "error": "",
        "warning": "",
        "info": "",
        "hint": "",
        "ok": ""
      }
    },
    "floatwin": {
      "border": "rounded",
      "scale": 0.85,
      "winblend": 15,
      "pumblend": 15
    },
    "perf": {
      "maxfilesize": 5242880 // 5 * 1024 * 1024
    }
  }
}
